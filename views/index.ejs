<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Blog Post</title>
</head>
<body>
    <div class="container p-4">
        <h1 class="mb-4">Blog Post</h1>
        <a href="/new" class="btn btn-success">New Article</a>

                <% articles.forEach((article,index) => { %>
                    <div class="card mt-4">
                        <div class="card-body">
                            <div class="card-title"><h4><%= article.title %></h4></div>
                            <div class="card-subtitle text-muted mb-2"><%= article.dateCreated %></div>
                            <div class="card-text mb-2"><%= article.desc %></div>
                            <a href="/read-more/<%= index %>" class="btn btn-primary">Read More</a>
                            <a href="/edit/<%= index %>" class="btn btn-info">Edit</a>
                            <a href="/delete/?index=<%= index %>" class="btn btn-danger">delete</a>
                        </div>
                    </div>
                <% }) %>
    </div>
</body>
</html>